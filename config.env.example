# CityPulse Environment Variables
# Copy this file to .env.local and fill in your actual values

# Firebase Configuration
REACT_APP_FIREBASE_API_KEY=your-api-key-here
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
REACT_APP_FIREBASE_APP_ID=your-app-id

# Firebase Cloud Functions Region (optional)
REACT_APP_FIREBASE_FUNCTIONS_REGION=us-central1

# Twilio WhatsApp Integration
REACT_APP_TWILIO_ACCOUNT_SID=your-twilio-account-sid
REACT_APP_TWILIO_AUTH_TOKEN=your-twilio-auth-token
REACT_APP_TWILIO_WHATSAPP_NUMBER=+1234567890

# Meta (Facebook/Instagram) Integration
REACT_APP_META_ACCESS_TOKEN=your-meta-access-token
REACT_APP_META_PAGE_ID=your-page-id
REACT_APP_META_INSTAGRAM_BUSINESS_ACCOUNT_ID=your-instagram-business-account-id

# Twitter/X Integration
REACT_APP_TWITTER_BEARER_TOKEN=your-twitter-bearer-token
REACT_APP_TWITTER_API_KEY=your-twitter-api-key
REACT_APP_TWITTER_API_SECRET=your-twitter-api-secret
REACT_APP_TWITTER_ACCESS_TOKEN=your-twitter-access-token
REACT_APP_TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Firebase Cloud Messaging (FCM)
REACT_APP_FIREBASE_MESSAGING_VAPID_KEY=your-vapid-key-here

# App Configuration
REACT_APP_APP_NAME=CityPulse
REACT_APP_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Social Media Escalation Settings
REACT_APP_ESCALATION_DAYS=3
REACT_APP_AUTHORITY_TAGS=@MLA_Handle @Municipality_Handle @CM_Handle

# Map Configuration
REACT_APP_MAP_CENTER_LAT=40.7128
REACT_APP_MAP_CENTER_LNG=-74.0060
REACT_APP_MAP_ZOOM=12

# WhatsApp Bot Settings
REACT_APP_WHATSAPP_WELCOME_MESSAGE=Welcome to CityPulse! Send us a photo/video with description to report an issue.
REACT_APP_WHATSAPP_STATUS_UPDATE_MESSAGE=Your issue status has been updated to: {status}. Track it at: {trackingLink}

# Notification Settings
REACT_APP_PUSH_NOTIFICATION_ENABLED=true
REACT_APP_WHATSAPP_NOTIFICATION_ENABLED=true
REACT_APP_EMAIL_NOTIFICATION_ENABLED=false

# Analytics and Monitoring
REACT_APP_ANALYTICS_ENABLED=true
REACT_APP_ERROR_REPORTING_ENABLED=true
REACT_APP_PERFORMANCE_MONITORING_ENABLED=true

# Security Settings
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,video/mp4,video/quicktime
REACT_APP_RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Development Settings
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=info
REACT_APP_API_TIMEOUT=30000
